@model electronics.ViewModel.AdminLogin
@{
    Layout = "_Layout";
}
<a asp-controller="Admin" asp-action="Registration">Գրանցվել</a>
<form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="col-lg-4 offset-4">
        <div class="form-group ">
            <input type="text" asp-for="Email" class="form-control " placeholder="Էլ․ հասցե" autocomplete="off" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group ">
            <input asp-for="Password" class="form-control" placeholder="Գաղտնաբառ" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group text-center ">
            <input type="submit" value="Մուտք" class="btn btn-success" />
        </div>
    </div>
</form>