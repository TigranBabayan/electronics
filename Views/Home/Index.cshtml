@model IEnumerable<electronics.Models.Computer>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using electronics

@{
    Layout = "_Layout";
}
<div class="row" style="margin-top:20px">
    <form method="post" asp-action="Filter" asp-controller="Home" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 left-filter-sidebar " style="margin-bottom:10px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow " style="border-bottom:none!important;padding:0 !important">
            <div class="container" style="padding:0!important">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="margin-bottom:10px">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="card navbar-collapse collapse d-sm-inline-flex justify-content-between " style="background-color: #eee">
                    @{ List<string> anyBrand = ViewBag.ComputerBrand;}
                    @if (anyBrand.Any())
                    {
                        <article class="card-group-item">
                            <header class="card-header">
                                <h6 class="title">Գին</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <input type="number" class="form-control product_check" name="MinPrice" id="minPrice" placeholder="Մինիմում">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <input type="number" class="form-control product_check" name="MaxPrice" id="maxPrice" placeholder="Մաքսիմում">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<int?> discounts = ViewBag.Discounts;}
                    @if (discounts.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Զեղչ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (int discount in ViewBag.Discounts)
                                        {
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input product_check" id="@discount" name="Discount" value="@discount">
                                                <label class="custom-control-label" for="@discount">@discount</label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> brands = ViewBag.ComputerBrand;}
                    @if (brands.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Ապրանքանիշ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var brand in ViewBag.ComputerBrand)
                                        {
                                            if (!string.IsNullOrWhiteSpace(brand))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@brand" name="ComputerBrand" value="@brand">
                                                    <label class="custom-control-label" for="@brand">@brand</label>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> processors = ViewBag.Processor;}
                    @if (processors.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Պրոցեսորի տեսակ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var processor in ViewBag.Processor)
                                        {
                                            if (!string.IsNullOrWhiteSpace(processor))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@processor" name="Processor" value="@processor">
                                                    <label class="custom-control-label" for="@processor">@processor</label>
                                                </div>

                                            }
                                        }
                                    }

                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> opSystems = ViewBag.OperatingSystem;}
                    @if (opSystems.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Օպերացիոն համակարգ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">

                                    @{
                                        foreach (var os in ViewBag.OperatingSystem)
                                        {
                                            if (!string.IsNullOrWhiteSpace(os))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@os" name="OperatingSystem" value="@os">
                                                    <label class="custom-control-label" for="@os">@os</label>
                                                </div>
                                            }
                                        }
                                    }

                                </div>
                            </div>
                        </article>
                    }
                    @{ List<int> ramSizes = ViewBag.RamSize;}
                    @if (ramSizes.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Օպերատիվ հիշասարք</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var ramSize in ViewBag.RamSize)
                                        {
                                            if (ramSize != null)
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@ramSize" name="RamSize" value="@ramSize">
                                                    <label class="custom-control-label" for="@ramSize">@ramSize ԳԲ</label>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> storageTypes = ViewBag.StorageType;}
                    @if (storageTypes.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Հիշողության տեսակ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var storageType in ViewBag.StorageType)
                                        {
                                            if (!string.IsNullOrWhiteSpace(storageType))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@storageType" name="StorageType" value="@storageType">
                                                    <label class="custom-control-label" for="@storageType">@storageType</label>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> graphicCards = ViewBag.GraphicCard;}
                    @if (graphicCards.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Գրաֆիկական քարտ</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var graphicCard in ViewBag.GraphicCard)
                                        {
                                            if (!string.IsNullOrWhiteSpace(graphicCard))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@graphicCard" name="GraphicCard" value="@graphicCard">
                                                    <label class="custom-control-label" for="@graphicCard">@graphicCard</label>
                                                </div>
                                            }
                                        }
                                    }

                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> maxResalutions = ViewBag.MaximumResolution;}
                    @if (maxResalutions.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Էկրանի կետայնություն</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var maxResoltion in ViewBag.MaximumResolution)
                                        {
                                            if (!string.IsNullOrWhiteSpace(maxResoltion))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@maxResoltion" name="MaximumResolution" value="@maxResoltion">
                                                    <label class="custom-control-label" for="@maxResoltion">@maxResoltion</label>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                    @{ List<string> sreenSizes = ViewBag.SreenSize;}
                    @if (sreenSizes.Any())
                    {
                        <article class="card-group-item col-md-12 col-sm-12 col-xs-12">
                            <header class="card-header">
                                <h6 class="title">Էկրանի չափս</h6>
                            </header>
                            <div class="filter-content">
                                <div class="card-body ">
                                    @{
                                        foreach (var screenSize in ViewBag.SreenSize)
                                        {
                                            if (!string.IsNullOrWhiteSpace(screenSize))
                                            {
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input product_check" id="@screenSize" name="SreenSize" value="@screenSize">
                                                    <label class="custom-control-label" for="@screenSize">@screenSize</label>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </div>
        </nav>
        <div class="text-center " style="background-color: #dc3545;">
            <button type="submit" class="btn btn-success" style="background: #dc3545; border:none">Ֆիլտրել<i class="fa fa-search"></i></button>
        </div>
    </form>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 ">
        <div class="container">
            <div class="row" id="product_content">
                @foreach (var product in Model.OrderByDescending(i => i.Id))
                {
                    <div class="col-md-4 cursor pb-3">
                        <div class="card">
                            <div class="product align-items-center p-2 text-center">
                                <div class="card-body pb-3 h-75">
                                    <a asp-action="Details" asp-route-id="@product.Id">
                                        <img src="~/images/@product.ProductGaleries.FirstOrDefault().ImageUrl" class="card-img-top" style="height:150px" />
                                    </a>
                                    @if (product.Discount != null)
                                    {
                                        <h5><span class="badge badge-danger discount">-@product.Discount%</span></h5>
                                    }
                                    @if (product.IsNew != false)
                                    {
                                        <h5><span class="badge badge-danger isNew">Նոր</span></h5>
                                    }
                                </div>
                                <div class="mt-3 mb-4 text-dark ">
                                    <p style="color:black">@product.ComputerBrand @product.ComputerModel</p>
                                    @if (product.Discount != null)
                                    {
                                        product.DiscountedPrice = product.Price.Discount(product.Discount);
                                        <span style="color:#dc3545"> @product.DiscountedPrice դր․  <s style="color:lightgrey">@product.Price դր․</s></span>
                                    }
                                    else
                                    {
                                        <span>@product.Price դր․</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <a class="btn-block btn-danger text-center text-white text-uppercase detailsAddtoCart" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id">Զամբյուղ</a>
                    </div>
                }
            </div>
        </div>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
       new X.PagedList.Mvc.Core.Common.PagedListRenderOptions
       {
           DisplayItemSliceAndTotal = true,
           ContainerDivClasses = new[] { "navigation" },
           LiElementClasses = new[] { "page-item" },
           PageClasses = new[] { "page-link" },
       })
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
}
